@using TheCardEditor.DataModel;
@attribute [Route(Location)]
<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    [Inject] DataContext DataContext { get; set; } = default!;
    [Inject] IErrorLogger ErrorLogger { get; set; } = default!;
    public const string Location = "";
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        var result = DataContext.Games.First();
        result.Name += result.Name;
        DataContext.SaveChanges();
        ErrorLogger.LogError(result.Name);
    }
}